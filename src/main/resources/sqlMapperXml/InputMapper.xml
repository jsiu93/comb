<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xzh.comb.mapper.InputMapper">
	<resultMap id="BaseResultMap" type="com.xzh.comb.model.Input">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="session" property="session" jdbcType="CHAR" />
		<result column="ip" property="ip" jdbcType="VARCHAR" />
		<result column="timestamp" property="timestamp" jdbcType="TIMESTAMP" />
		<result column="realm" property="realm" jdbcType="VARCHAR" />
		<result column="success" property="success" jdbcType="BIT" />
	</resultMap>
	<resultMap id="ResultMapWithBLOBs" type="com.xzh.comb.model.Input"
		extends="BaseResultMap">
		<result column="input" property="input" jdbcType="LONGVARCHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		id, session, timestamp, realm, success
	</sql>
	<sql id="Blob_Column_List">
		input
	</sql>
	<select id="selectByPrimaryKey" resultMap="ResultMapWithBLOBs"
		parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		,
		<include refid="Blob_Column_List" />
		from input
		where id = #{id,jdbcType=INTEGER}
	</select>

	<select id="list" resultMap="ResultMapWithBLOBs" parameterType="Map">
		SELECT input.id, 
		input.`session`, 
		input.`timestamp`, 
		input.realm, 
		input.success, 
		input.input, 
		sessions.ip
		FROM input LEFT OUTER JOIN sessions ON input.`session` = sessions.id
		<where>
			<if test="session != null and session != ''">
				and input.`session` like #{session}
			</if>
			<if test="success != null">
				and input.success = #{success}
			</if>
			<if test="ip != null and ip != ''">
				and sessions.ip like #{ip}
			</if>
			<if test="startTime != null and startTime != '' ">
				and input.`timestamp` &gt;= #{startTime}
			</if>
			<if test="endTime != null and endTime != '' ">
				and input.`timestamp` &lt;= #{endTime}
			</if>
		</where>
		<if test="sort !=null and sort != ''">
			order by ${sort} ${order}
		</if>
		<if test="start != null and size != null">
			limit #{start}, #{size}
		</if>
	</select>
	
	<select id="getTotal" resultType="Long" parameterType="Map">
		SELECT count(*)
		FROM input LEFT OUTER JOIN sessions ON input.`session` = sessions.id
		<where>
			<if test="session != null and session != ''">
				and input.`session` like #{session}
			</if>
			<if test="success != null">
				and input.success = #{success}
			</if>
			<if test="ip != null and ip != ''">
				and sessions.ip like #{ip}
			</if>
			<if test="startTime != null and startTime != '' ">
				and input.`timestamp` &gt;= #{startTime}
			</if>
			<if test="endTime != null and endTime != '' ">
				and input.`timestamp` &lt;= #{endTime}
			</if>
		</where>
	</select>

</mapper>